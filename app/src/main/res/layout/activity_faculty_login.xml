<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".FacultyLogin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="320dp">

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/login_container" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/manipal_logo"
                    android:layout_width="164dp"
                    android:layout_height="172dp"
                    android:src="@drawable/manipal_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/slcm"
                    android:textColor="@color/light_orange"
                    android:textSize="55sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/faculty_sign_in_title"
                android:textColor="@color/maroon"
                android:textSize="28sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/Registration_No_Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="@string/username"
                        android:textColor="@color/gray"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/id_box"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/Registration_No_Text"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/login_box" />

                    <EditText
                        android:id="@+id/Fac_Username_Edit"
                        android:layout_width="220dp"
                        android:layout_height="31dp"
                        android:layout_alignTop="@+id/id_box"
                        android:layout_alignBottom="@+id/id_box"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/light_gray"
                        android:text=""
                        android:textColor="@color/gray"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/Password_Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/id_box"
                        android:layout_margin="5dp"
                        android:text="@string/password"
                        android:textColor="@color/gray"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/Password_Text"
                        android:layout_gravity="center"
                        android:id="@+id/passbox"
                        android:background="@drawable/login_box" />

                    <EditText
                        android:id="@+id/Fac_Password_Edit"
                        android:layout_width="220dp"
                        android:layout_height="31dp"
                        android:layout_below="@id/Password_Text"
                        android:layout_alignTop="@+id/passbox"
                        android:layout_alignBottom="@+id/passbox"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/light_gray"
                        android:inputType="textPassword"
                        android:text=""
                        android:textColor="@color/gray"
                        android:textSize="18sp" />
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/Faculty_SignIn_Btn"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/dark_orange"
                android:radius="8dp"
                android:text="@string/sign_in"
                android:textSize="20sp"
                app:cornerRadius="8dp" />

            <TextView
                android:id="@+id/Faculty_Forgot_Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/forgot_password"
                android:textColor="@color/maroon"
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/Student_SignIn_Link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/student_login_link"
                android:textColor="@color/blue"
                android:textSize="21sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>