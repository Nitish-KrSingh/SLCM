<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Faculty.FacultyViewAnnouncement">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/Linear1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Linear1"
                android:gravity="left"
                android:layout_marginLeft="255dp"
                android:layout_marginTop="20dp">


                <LinearLayout
                    android:id="@+id/listItemViewEditButton"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:backgroundTint="@color/light_purple"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:radius="8dp"
                    app:cornerRadius="8dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/baseline_edit_24"
                        android:contentDescription="Edit Icon"
                        android:paddingEnd="8dp"/>

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="Edit"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/listItemViewDeleteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:backgroundTint="@color/light_purple"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:orientation="horizontal"


                    android:gravity="center_vertical"
                    android:radius="8dp"
                    app:cornerRadius="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/listItemViewEditButton">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/baseline_delete_24"
                        android:contentDescription="Edit Icon"
                        android:paddingEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                </LinearLayout>



            </RelativeLayout>


            <TextView
                android:id="@+id/CreatedAnnouncementTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:paddingHorizontal="15dp"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/CreatedAnnouncementDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Date"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/CreatedAnnouncementMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:paddingTop="8dp"
                android:text="Message"
                android:textSize="15sp" />




        </LinearLayout>


    </RelativeLayout>
</ScrollView>


