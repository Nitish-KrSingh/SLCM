<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student.Student_Dashboard">

    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
      android:gravity="center_horizontal"
      >
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
        android:id="@+id/lin1"
    android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/btnAnnouncement"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:background="@drawable/rounded_button"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textSize="11dp"
            android:text="Announcements"
             />

        <Button
            android:id="@+id/btnTimeTable"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:textSize="11dp"
            android:background="@drawable/rounded_button"
            android:text="Time Table" />

        <Button
            android:id="@+id/btnAttendance"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rounded_button"
            android:textSize="11dp"
            android:text="Attendance" />

</LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/lin1"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true">
            <Button
                android:id="@+id/btnMarks"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:background="@drawable/rounded_button"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:textSize="11dp"
                android:padding="20dp"
                android:text="Marks"
                />

            <Button
                android:id="@+id/btnFees"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/rounded_button"
                android:padding="20dp"
                android:textSize="11dp"
                android:text="Fees" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/txtheading"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/relative2"
android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="Announcements"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/blue"
       />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/txtheading"
    android:orientation="vertical"
    android:layout_centerHorizontal="true">
    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/light_purple"
        android:background="@drawable/rounded_background"
        android:paddingLeft="30dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/txtHigherEducation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HIGHER EDUCATION OPPORTUNITIES IN USA" />

        <TextView
            android:id="@+id/txtDate1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtHigherEducation"
            android:text="Date : 12-09-2023"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rel2"
        android:layout_below="@+id/relative1"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/light_purple"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_background"
        android:paddingLeft="30dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/txtTimeTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TIME TABLE FOR M.TECH AND MCA" />

        <TextView
            android:id="@+id/txtDate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTimeTable"
            android:text="Date : 12-09-2023"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rel3"
        android:layout_below="@+id/rel2"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_background"
        android:paddingLeft="30dp"
        android:backgroundTint="@color/light_purple"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/txtTechTatva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TECHTATVA" />

        <TextView
            android:id="@+id/txtDate3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTechTatva"
            android:text="Date : 12-09-2023"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rel5"
        android:layout_below="@+id/rel4"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_background"
        android:paddingLeft="30dp"
        android:backgroundTint="@color/light_purple"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/txtCybersecurityCourse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CYBERSECURITY COURSE" />

        <TextView
            android:id="@+id/txtDate5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtCybersecurityCourse"
            android:text="Date : 12-09-2023"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rel4"
        android:layout_below="@+id/rel3"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_background"
        android:paddingLeft="30dp"
        android:backgroundTint="@color/light_purple"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/txtHoliday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HOLIDAY" />

        <TextView
            android:id="@+id/txtDate4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtHoliday"
            android:text="Date : 12-09-2023"
            />
    </RelativeLayout>
</LinearLayout>

</RelativeLayout>