<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Student.StudentForgotPassword">

        <LinearLayout
            android:id="@+id/password_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="30dp"
            android:orientation="vertical"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/Registration_No_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/registration_no"
                    android:textColor="@color/gray"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/username_box"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/Registration_No_Text"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/login_box" />

                <EditText
                    android:id="@+id/Registration_No_Edit"
                    android:layout_width="220dp"
                    android:layout_height="31dp"
                    android:layout_alignTop="@+id/username_box"
                    android:layout_alignBottom="@+id/username_box"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/light_gray"
                    android:inputType="number"
                    android:text=""
                    android:textColor="@color/gray"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/New_Password_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Registration_No_Edit"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/new_password"
                    android:textColor="@color/gray"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/pass_box"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/New_Password_Text"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/login_box" />

                <EditText
                    android:id="@+id/Stud_New_Password_Edit"
                    android:layout_width="220dp"
                    android:layout_height="31dp"
                    android:layout_alignTop="@+id/pass_box"
                    android:layout_alignBottom="@+id/pass_box"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/light_gray"
                    android:inputType="textPassword"
                    android:text=""
                    android:textColor="@color/gray"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/Confirm_Password_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pass_box"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/confirm_password"
                    android:textColor="@color/gray"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/conf_pass_box"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/Confirm_Password_Text"
                    android:layout_gravity="center"
                    android:background="@drawable/login_box" />

                <EditText
                    android:id="@+id/Stud_Confirm_Password_Edit"
                    android:layout_width="220dp"
                    android:layout_height="31dp"
                    android:layout_alignTop="@+id/conf_pass_box"
                    android:layout_alignBottom="@+id/conf_pass_box"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/light_gray"
                    android:inputType="textPassword"
                    android:text=""
                    android:textColor="@color/gray"
                    android:textSize="20sp" />
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/password_layout"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/dark_green"
            android:text="@string/change"
            app:cornerRadius="8dp" />
    </RelativeLayout>
</ScrollView>
