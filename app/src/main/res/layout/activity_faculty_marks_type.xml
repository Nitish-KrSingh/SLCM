<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Faculty.FacultyMarksType">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp"
        android:id="@+id/lay1"

        android:background="@color/light_gray">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
            android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:text="ASSESMENT TYPE" />

        </RelativeLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Internal Assignment 1"
                android:textSize="20dp">

            </CheckBox>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Internal Assignment 2"
                android:textSize="20dp">


            </CheckBox>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Internal Assignment 3"
                android:textSize="20dp">


            </CheckBox>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Internal Assignment 4"
                android:textSize="20dp">


            </CheckBox>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mid Term"
                android:textSize="20dp">
            </CheckBox>
        </LinearLayout>



    </LinearLayout>
    <LinearLayout
android:layout_below="@+id/lay1"
        android:id="@+id/lay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:text="Maximum Marks: " />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:hint="Enter marks"
            android:padding="10dp"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/lay2"
        android:id="@+id/lay3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:text="Date: " />

        <ImageButton
            android:layout_width="26dp"
            android:layout_height="27dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/baseline_calendar_month_24"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:layout_centerInParent="true"

            android:text="19-06-2023 " />

    </LinearLayout>

        <Button
            android:id="@+id/submit"
            android:layout_below="@+id/lay3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
      android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:text="Next"
            app:cornerRadius="8dp"
            android:backgroundTint="@color/maroon"/>



</RelativeLayout>