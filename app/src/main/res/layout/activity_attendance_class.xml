<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Faculty.AttendanceClassActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relative2"
        android:padding="30dp"
      >

        <TextView
            android:id="@+id/txtselectAttendaceClass"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:text="Select your class &amp; section:"
            android:textSize="25sp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_below="@+id/txtselectAttendaceClass"
    android:layout_marginTop="30dp">
    <Button
        android:id="@+id/btnMcaA"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/light_purple"
        android:radius="8dp"
        android:textColor="@color/blue"
        android:textSize="25dp"
        android:padding="20dp"
        android:text="MCA-A"
        app:cornerRadius="8dp" />



    <Button
        android:id="@+id/btnMcaB"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/light_purple"
        android:radius="8dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/blue"
        android:textSize="25dp"
        android:padding="20dp"
        android:text="MCA-B"
        app:cornerRadius="8dp" />
    <Button
        android:id="@+id/btnbtech"
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/light_purple"
        android:radius="8dp"
        android:textColor="@color/blue"
        android:textSize="25dp"
        android:padding="20dp"
        android:text="B.Tech Data Science"
        app:cornerRadius="8dp" />
</LinearLayout>
    </RelativeLayout>


</RelativeLayout>