<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Faculty.FacultyAttendanceClass">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relative2"
        android:padding="30dp"
      >

        <TextView
            android:id="@+id/txtselectAttendanceClass"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:text="Select your class &amp; section:"
            android:textSize="25sp" />

        <ListView
            android:id="@+id/classSectionListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtselectAttendanceClass"
            android:layout_marginTop="30dp"
            android:divider="@null"
            android:dividerHeight="30dp"
            android:clickable="true"
            />
    </RelativeLayout>

</RelativeLayout>
