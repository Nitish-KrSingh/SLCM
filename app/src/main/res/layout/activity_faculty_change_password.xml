<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Faculty.FacultyChangePassword">

        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/blue">

            <ImageView
                android:id="@+id/ProfileImg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:background="@mipmap/profile"
                android:visibility="visible" />

            <TextView
                android:id="@+id/profname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ProfileImg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="25dp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/Fac_Change_Password_Layout"
            android:layout_width="300dp"
            android:layout_height="210dp"
            android:layout_below="@id/relative1"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:padding="10dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/New_Password_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/new_password"
                    android:textColor="@color/gray"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/new_password_box"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/New_Password_Text"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/login_box" />

                <EditText
                    android:id="@+id/Fac_New_Password_Edit"
                    android:layout_width="220dp"
                    android:layout_height="31dp"
                    android:layout_alignTop="@+id/new_password_box"
                    android:layout_alignBottom="@+id/new_password_box"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="12dp"
                    android:background="@color/light_gray"
                    android:inputType="textPassword"
                    android:text=""
                    android:textColor="@color/gray"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/Confirm_Password_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/new_password_box"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/confirm_password"
                    android:textColor="@color/gray"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/Confirm_Password_Text"
                    android:layout_gravity="center"
                    android:background="@drawable/login_box" />

                <EditText
                    android:id="@+id/Fac_Confirm_Password_Edit"
                    android:layout_width="220dp"
                    android:layout_height="31dp"
                    android:layout_below="@id/Confirm_Password_Text"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/light_gray"
                    android:inputType="textPassword"
                    android:text=""
                    android:textColor="@color/gray"
                    android:textSize="20dp" />
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Fac_Change_Password_Layout"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/dark_green"
            android:text="@string/change"
            app:cornerRadius="8dp" />

    </RelativeLayout>

</ScrollView>