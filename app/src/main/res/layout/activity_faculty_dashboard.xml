<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Faculty.FacultyDashboard">


    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="30dp"
        android:paddingTop="20dp">

        <Button
            android:id="@+id/btnAnnouncement"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/rounded_button"
            android:elevation="6dp"
            android:gravity="center"
            android:padding="20dp"
            android:stateListAnimator="@null"
            android:text="Announcements"
            android:textColor="#ffffff"
            />

        <Button
            android:id="@+id/btnTimeTable"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/btnAnnouncement"
            android:background="@drawable/rounded_button"
            android:layout_alignParentEnd="true"
            android:elevation="6dp"
            android:gravity="center"
            android:padding="20dp"
            android:stateListAnimator="@null"
            android:text="Time Table"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnAttendance"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_below="@+id/btnAnnouncement"
            android:layout_centerHorizontal="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_button"
            android:elevation="6dp"
            android:gravity="center"
            android:padding="20dp"
            android:stateListAnimator="@null"
            android:text="Attendance"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnMarks"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_below="@+id/btnTimeTable"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/btnAttendance"
            android:layout_alignParentEnd="true"
            android:background="@drawable/rounded_button"
            android:elevation="6dp"
            android:gravity="center"
            android:padding="20dp"
            android:stateListAnimator="@null"
            android:text="Marks"
            android:textColor="#ffffff">


        </Button>

    </RelativeLayout>


    <TextView
        android:id="@+id/txtHeading"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/relative2"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="Announcements"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txtHeading"
        android:id="@+id/relative3"
        android:paddingHorizontal="15dp"
        >

        <ListView
            android:id="@+id/fac_dashboard_announcement_ListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:divider="@null"
            android:clickable="true"
            tools:listitem="@layout/activity_faculty_announcement_list_item"

            />
    </RelativeLayout>

</RelativeLayout>