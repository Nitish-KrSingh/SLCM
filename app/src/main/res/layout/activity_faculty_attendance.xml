<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <Button
        android:id="@+id/all_absent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/dark_green"
        android:text="All Absent"
        app:cornerRadius="8dp" />

    <Button
        android:id="@+id/all_present"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="36dp"
        android:layout_toStartOf="@+id/Fac_Submit_Att_Btn"
        android:layout_toRightOf="@+id/all_absent"
        android:backgroundTint="@color/dark_green"
        android:text="All Present"
        app:cornerRadius="8dp" />

    <Button
        android:id="@+id/Fac_Submit_Att_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="12dp"
        android:text="@string/fac_submit"
        app:cornerRadius="8dp"
        android:backgroundTint="@color/dark_green"/>


    <TextView
        android:id="@+id/Fac_Att_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Students"
        android:textSize="18sp"
        android:layout_below="@id/Fac_Submit_Att_Btn"
        android:layout_centerHorizontal="true"
        />

    <ListView
        android:padding="20dp"
        android:id="@+id/Fac_Stud_Att_List"
        android:layout_below="@id/Fac_Att_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:divider="@null"
        android:dividerHeight="30dp"
        android:clickable="true"
        />
</RelativeLayout>
